{% extends 'base.html.twig' %}

{% block title %}catégory {{category.name}}{% endblock %}

{% block body %}
{{dump()}}
<main class="container">
    <section class="row">
        <div class="col-12">
            <h1> Liste des produits de la catégory {{category.name}}</h1>
        </div>
        <div class="col-12">
            <ul>
                {% for product in products %}
                <div class="col-3 mb-3">
                    <article class="card h-100">
                        {#<!-- <img src="{{ asset('assets/uploads/products/mini/300x300-' ~ product.images[0].name ) }}"
                            class="card-img-top" alt="{{ product.name }}"> -->#}
                        <div class="card-body">
                            <h2 class="card-title">{{ product.name }}</h2>
                            <p class="card-text">{{ product.description }}</p>
                            <a href="{{path('app_products_slug',{'slug':product.slug}) }}" class="btn btn-primary">Voir
                                les détails</a>
                        </div>
                    </article>
                </div>
                {% endfor %}
                {#{% for prod in products %}
                <li>
                    {{prod.name}}
                </li>
                {% endfor %}#}

            </ul>
        </div>
    </section>
</main>
{% endblock %}